<footer class="text-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h5><%= t("label.about") %></h5>
        <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto w-25">
        <p class="mb-0">
          <%= t("info.detail") %>
        </p>
      </div>
      <div class="col-md-4 offset-md-2">
        <h5><%= t("label.contact") %></h5>
        <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto w-25">
        <ul class="list-unstyled">
          <li><i class="fa fa-home mr-2"></i> <%= t("logo") %></li>
          <li><i class="fa fa-envelope mr-2"></i> <%= t("info.email") %></li>
          <li><i class="fa fa-phone mr-2"></i> <%= t("info.phone") %></li>
        </ul>
      </div>
      <div class="col-12 copyright mt-3">
        <p class="float-left">
          <%= link_to t("info.back_top"), "#" %>
        </p>
        <p class="text-right text-muted">
          <%= t("info.created_by") %>
          <i class="fa fa-heart"></i>
          | <span><%= t("info.version") %></span>
        </p>
      </div>
    </div>
  </div>
</footer>
