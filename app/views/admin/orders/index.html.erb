<br>
<div class="row justify-content-md-center">
  <h1><%= t("label.history") %></h1>
</div>

<% if @orders.any? %>
  <% @orders.each_with_index do |order| %>
    <%= render "shared/order", order: order %>
    <div class="text-right">
      <%= link_to edit_admin_order_path(order), class: "btn btn-info" do %>
        <%= t("label.edit") %>
      <% end %>
    </div>
  <% end %>

  <div class="row justify-content-md-center">
    <%= will_paginate @orders %>
  </div>
<% else %>
  </br>
  <div class="row justify-content-md-center">
    <%= link_to root_path, class: "btn btn-warning" do %>
      < <%= t("link.continue") %>
    <% end %>
  </div>
  </br>
<% end %>
